.container-fluid
  %p
  .row
    .col-md-12
      .card.card-trans
        .card-body.card-body-trans.account-type
          %p
            As a guest&nbsp;
            %i> you can play immediately
            \. Guest accounts remain active until your browser is closed.
          .form-group
            %button.btn.btn-info{ type: :submit, id: :guest }
              Play as a Guest
          %p
            %br/
            If you&nbsp;
            %i> already have an account
            , you can login:
            .form-group
              %button.btn.btn-primary{ type: :submit, id: :login }
                Login to my Account
          %p
            %br/
            A
            %i permanent account
            will maintain your game history and stats:
            .form-group
              %button.btn.btn-primary{ type: :submit, id: :signup }
                Create a new Account

  .row
    .col.text-center
      %br/
      = link_to 'NauticalWar.com', root_path, class: 'white'
    %p &nbsp;

:javascript
  $(function() {
    $('#guest').on('click', function() {
      $.ajax({
        method: 'post',
        url: '/play/guests',
        headers: {
          'X-CSRF-Token': document.querySelector("meta[name=csrf-token]").content
        }
      });
    });

    $('#signup').on('click', function() {
      window.location.href = '/play/players/new';
    });

    $('#login').on('click', function() {
      window.location.href = '/play/sessions/new';
    });
  });
